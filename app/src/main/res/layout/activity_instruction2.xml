<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp"
    tools:context=".Instruction2">

    <TextView
        android:id = "@+id/text_view"
        android:layout_marginTop="150dp"
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
        android:hint = "This is a simple Binghamton themed RPG game. First you must create a character and choose your stats, then you'll be presented with choices that have different outcomes. Your health is at the top of the screen." />




    <Button
        android:id="@+id/button_back"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BACK"
        android:onClick="backClick"
        />



</LinearLayout>